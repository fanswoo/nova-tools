{
  "extends": "@fanswoo/eslint-config-workspace/tsconfig.node.default.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "lib",
    "baseUrl": ".",
    "typeRoots": [
      "src/core",
      "node_modules/@types",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./src/**/*",
    "**/*.d.ts"
  ]
}